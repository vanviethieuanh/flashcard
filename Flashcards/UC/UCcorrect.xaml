<UserControl x:Class="Flashcards.UC.UCcorrect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flashcards.UC"
             mc:Ignorable="d">
    <Border BorderThickness="3,0,0,0" BorderBrush="{StaticResource ScrollBar.MouseOver.Background}" Margin="0,5">
        <StackPanel>
            <Label Style="{StaticResource normal_Fade}" >
                <AccessText Name="txt_Ques"/>
            </Label>
            <Label Style="{StaticResource normal_Black}" >
                <AccessText Name="txt_Ans"/>
            </Label>
        </StackPanel>
    </Border>
</UserControl>
